{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 200
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noDoubleEquals": "off",
				"noArrayIndexKey": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noForEach": "off",
				"useOptionalChain": "off",
				"noBannedTypes": "off"
			},
			"style": {
				"useImportType": "off",
				"noNonNullAssertion": "off",
				"noUnusedTemplateLiteral": "off",
				"useSelfClosingElements": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"useButtonType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "es5",
			"lineWidth": 200
		}
	}
}